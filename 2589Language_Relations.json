        "save_document": false,
        "process_related_documents": true,
        "create_relations": [
          {
            "relation_type": "language",
            "clear_existing_relations": true
          }
        ],
        "reset_counter": {
          "step": "item_step"
        },

        "context": {
          "is_url": false,
          "is_text": false,
          "is_single": false,
          "is_sibling_tag": false,
          "combine_context": false,
